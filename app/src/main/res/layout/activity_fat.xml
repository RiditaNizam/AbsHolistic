<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.absholistic.Fat.FatActivity">

    <Button
        android:id="@+id/anatomyandphysiology"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/fatbutton"
        android:onClick="sendMessage"
        android:padding="15dp"
        android:text="Anatomy and Physiology" />

    <Button
        android:layout_toRightOf="@id/anatomyandphysiology"
        android:id="@+id/calipers"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/fatbutton"
        android:onClick="sendMessage"
        android:padding="15dp"
        android:text="Fat Calipers" />

</RelativeLayout>