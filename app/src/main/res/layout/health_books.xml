<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/darkorange">

    <RelativeLayout
        android:id="@+id/zerobellybookandtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/zerobellybook"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/zero_belly_book" />

        <TextView
            android:id="@+id/zerobellybooktext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/zerobellybook"
            android:text="Zero Belly Cookbook by David Zinczenko" />
    </RelativeLayout>

</RelativeLayout>
